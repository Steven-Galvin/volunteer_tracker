<div class="row">
  <div class="col-md-6">
    <form action="/" method="post">
      <label for="project_name">Project Name:</label>
      <input id="project_name" name="project_name" type="text" required>

      <button type="submit" class="btn btn-success">Add Project</button>
    </form>
  </div>
  <div class="col-md-6">

  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h1>Your Current Projects</h1>

    <% if @projects.any? %>
      <h3>Click on a project to see its tasks:</h3>

      <ul>
        <% @projects.each do |project| %>
          <li><a href="/projects/<%= project.id %>"><%= project.name %></a></li>
        <% end %>
      </ul>

    <% else %>

      <p>There are no projects yet!</p>

    <% end %>
  </div>
  <div class="col-md-6">
    <h1>Your Current Volunteers</h1>

    <% if @volunteers.any? %>
      <h3>Click on a volunteer to update:</h3>

      <ul>
        <% @volunteers.each do |volunteer| %>
          <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
        <% end %>
      </ul>

    <% else %>

      <p>There are no volunteers yet!</p>

    <% end %>

  </div>
</div>
